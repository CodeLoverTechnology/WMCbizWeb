
@{
    ViewBag.Title = "GST_Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <style>
                    body{
                        background-image: url('../Content/images/GST.jpg');
                        position: auto;
                        background-repeat: no-repeat;
                        width: 100%;
                    }
            </style>
    
    
    <form>
    
            <div class="container-fluid">
                <div class="row mt-5">
                   <div class="offset-7 col-5">
                       <form>
                           <div class="card">
                               <div class="card-header">
                                   <div class="text-center" style="font-size:25px; color:aliceblue;">REQUEST A CALL BACK</div>
                               </div>
                               <div class="card-body">
                                   <div class="form-group">
                                       <label for="name"><b></b></label>
                                       <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                                       @*<span id="message"></span><br>*@
                                   </div>
                                   <div class="form-group">
                                       <label for="email"><B></B></label>
                                       <input type="email" class="form-control" id="email" placeholder="Email Address" required>
                                   </div>
                                   <div class="form-group">
                                       <label for="num"><B></B></label>
                                       <div class="input-group">
                                           <span class="input-group-addon bg-light p-1">+91 </span>
                                           <input type="tel" class="form-control" id="num" placeholder="Please Enter Number.." required>
                                       </div>
                                   </div>
                                   <div>
                                       <button type="submit" class="btn btn-primary btn-lg float-right">Get Start</button>
                                   </div>
                               </div>
                           </div>
                       </form>
                   </div>
               </div>
            </div>
        </form>
    
    <section >
        <div class="jumbotron">
    <div class="bg-light card">
       <h3 class="card-header  text-center">
            GST Registration
        </h3>
     <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
               <p style="font-size:20px;">
                    GST is a destination based tax on consumption of goods and services. It is proposed to be levied at all
                    stages right from manufacture up to final consumption with credit of taxes paid at previous stages
                    available as setoff. In a nutshell, only value addition will be taxed and burden of tax is to be borne by the
                    final consumer.
                </p>
            </div>
        </div>  
         
    </div>
    
    </div>
    <br>
    <br>
    
  
    
        <div class="bg-light card">
            <div class="card-header ">
                 <h2 class="text-left">Document List (Required for Registration)</h2>
            </div>
    <div class="card-body">
            <p style="font-size:20px; color:black;">
                  1.  PAN of the Applicant<br>
                  2.  Aadhaar card<br>
                  3.  Proof of business registration or Incorporation certificate<br>
                  4.  Identity and Address proof of Promoters/Director with Photographs<br>
                  5.  Address proof of the place of business<br>
                  6.  Bank Account statement/Cancelled cheque<br>
                  7.  Digital Signature<br>
                  8.  Letter of Authorization/Board Resolution for Authorized Signatory<br>
           </p>
        </div>
    </div>
    
    <br>
    <br>
    
   
    
    </section>  
     