@*@model WMCbizWeb.Models.WMCUser*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WISDOM MANAGEMENT CONSULTANCY</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row bg-primary text-white fixed-top">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <span>
                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                    info@wmcbiz.com
                </span>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <i class="fa fa-registered text-white" aria-hidden="true"> CIN : U74900DL2011PTC219663</i>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <span>
                    <i class="fa fa-mobile" aria-hidden="true"></i>
                    +91-8178726022/7275278701
                </span>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 text-center">
                <i class="fa fa-facebook btn btn-dark" aria-hidden="true"></i>
                <i class="fa fa-twitter  btn btn-dark" aria-hidden="true"></i>
                <i class="fa fa-google btn btn-dark" aria-hidden="true"></i>
                <i class="fa fa-linkedin btn btn-dark" aria-hidden="true"></i>
                <i class="fa fa-youtube btn btn-dark" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.Partial("_MenuView")
    </div>
    <div class="row mt-5">
        @RenderBody()
    </div>
    <div class="row">
        @Html.Partial("_FooterView")
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $('col-4').hover(
            function () {
                $(this).animate({
                    marginTop: "-=1%",
                }, 200);
            },
            function () {
                $(this).animate({
                    marginTop: "0%"
                }, 200);
            }
        );
    });

    if('@TempData["qUERYmESSAGE"]' != '')
    {
        alert('@TempData["qUERYmESSAGE"]')
    }
</script>